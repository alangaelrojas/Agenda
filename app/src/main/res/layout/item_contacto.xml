<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    android:id="@+id/card_item_contacto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/textview_nombre"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_contacto_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nombre_contacto_item"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_nombre"
            app:layout_constraintStart_toEndOf="@+id/textview_nombre"
            app:layout_constraintTop_toTopOf="@+id/textview_nombre" />

        <TextView
            android:id="@+id/textview_telefono"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/telefono_contacto_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_nombre" />

        <TextView
            android:id="@+id/telefono_contacto_item"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_telefono"
            app:layout_constraintStart_toEndOf="@+id/textview_telefono"
            app:layout_constraintTop_toTopOf="@+id/textview_telefono" />


        <TextView
            android:id="@+id/textview_cumple"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/cumple_contacto_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_telefono" />

        <TextView
            android:id="@+id/cumple_contacto_item"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_cumple"
            app:layout_constraintStart_toEndOf="@+id/textview_cumple"
            app:layout_constraintTop_toTopOf="@+id/textview_cumple" />

        <TextView
            android:id="@+id/textview_nota"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/nota_contacto_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_cumple" />

        <TextView
            android:id="@+id/nota_contacto_item"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_nota"
            app:layout_constraintStart_toEndOf="@+id/textview_nota"
            app:layout_constraintTop_toTopOf="@+id/textview_nota" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>